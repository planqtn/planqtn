{
  "name": "planqtn-cli",
  "version": "1.0.0",
  "description": "CLI tool for PlanQTN",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "planqtn": "./dist/index.js",
    "htn": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "config"
  ],
  "scripts": {
    "build": "tsc && npm run copy-config",
    "copy-config": "mkdir -p dist/cfg && rsync -av --filter=':- ../../.gitignore' ../supabase/ dist/cfg/supabase/ && rsync -av ../k8s/ dist/cfg/k8s/ && rsync -av ../migrations/ dist/cfg/migrations/",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "cli",
    "planqtn"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "-": "^0.0.1",
    "@kubernetes/client-node": "^1.3.0",
    "commander": "^11.0.0",
    "g": "^2.0.1",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
